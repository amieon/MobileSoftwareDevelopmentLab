.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.picker {
  margin: 20rpx 0;
  padding: 15rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

.weather-text {
  font-size: 32rpx;
  margin: 20rpx 0;
  text-align: center;
}

.weather-icon {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx auto;
}

.detail {
  margin-top: 30rpx;
}

.bar {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.box {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  text-align: center;
  background-color: #e6f7ff;
  border-radius: 12rpx;
  font-size: 28rpx;
}
